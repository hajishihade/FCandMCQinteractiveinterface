# Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3001
NODE_ENV=development

# MongoDB Configuration - Content Database
# This database stores MCQs, flashcards, and table quizzes
CONTENT_MONGODB_URI=mongodb://localhost:27017/content

# MongoDB Configuration - Series Database
# This database stores study sessions and progress
SERIES_MONGODB_URI=mongodb://localhost:27017/series

# For production MongoDB Atlas:
# CONTENT_MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/content?retryWrites=true&w=majority
# SERIES_MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/series?retryWrites=true&w=majority

# API Configuration (optional)
# API_VERSION=v1
# API_PREFIX=/api

# Rate Limiting (optional - defaults shown)
# RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
# RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window

# Logging (optional)
# LOG_LEVEL=debug  # error, warn, info, debug

# CORS Configuration (optional)
# CORS_ORIGIN=http://localhost:3000

# Future: Authentication (when implemented)
# JWT_SECRET=your-secret-key-here
# JWT_EXPIRE=7d